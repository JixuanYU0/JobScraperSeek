# Environment variables for Seek Job Scraper

# =============================================================================
# API Server Configuration
# =============================================================================

# API Authentication (optional - leave empty to disable authentication)
# Generate keys with: python -c "from src.api.auth import generate_api_key; print(generate_api_key())"
# Multiple keys can be comma-separated
API_KEYS=

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# =============================================================================
# Scraper Configuration
# =============================================================================

# Path to configuration file
CONFIG_PATH=config/config.yaml

# Logging
LOG_LEVEL=INFO

# =============================================================================
# External Integrations
# =============================================================================

# Airtable Configuration (for future use)
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# PostgreSQL Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=seek_jobs
DB_USER=postgres
DB_PASSWORD=your_password_here

# Notification Webhooks (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# n8n Webhook URL (optional - for default notifications)
N8N_WEBHOOK_URL=
